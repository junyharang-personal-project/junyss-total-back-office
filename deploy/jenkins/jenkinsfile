def getStageRequiredTimeMs() {
    def startTime = System.currentTimeMillis()
    def endTime = System.currentTimeMillis()
    long duration = endTime - startTime

    def requiredTimeMs = duration % 1000
    def requiredTimeSeconds = (duration / 1000) % 60
    def requiredTimeMinutes = (duration / (1000 * 60)) % 60
    def requiredTimeHours = (duration / (1000 * 60 * 60))

    def result = 'ìž‘ì—… ì†Œìš” ì‹œê°„ : '

    if (requiredTimeHours > 0) {
        result += "${requiredTimeHours} ì‹œê°„ "
    }

    if (requiredTimeMinutes > 0) {
        result += "${requiredTimeMinutes} ë¶„ "
    }

    if (requiredTimeSeconds > 0) {
        result += "${requiredTimeSeconds} ì´ˆ (${requiredTimeMs} ms) "
    }

    return result
}